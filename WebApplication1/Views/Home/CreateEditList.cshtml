@{
    ViewData["Title"] = "Create or Edit List";
}
@model WebApplication1.Models.List


<div class="text-center">
    <h1 class="display-4">Create or Edit Lists</h1>
    <p>Create or Edit your lists.</p>
</div>


<form asp-action="CreateEditListForm" asp-controller="Home">
    <label>ID</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Id"/>

    <label class="mt-4"> Score </label>
    <input class="form-control" type="number" placeholder="0" asp-for="Score" step="1" />

    <label class="mt-4"> Title </label>
    <input class="form-control" type="text" placeholder="Add a description" asp-for="Title"/>

    <button class="btn btn-primary mt-4" type="submit"> Confirm </button>


</form>